{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,  // Add this line
    "moduleResolution": "node" // Optional, but recommended for Node.js projects
  },
  "include": ["src/**/*"]
}
